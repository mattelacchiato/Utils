<?xml version="1.0" encoding="utf-8"?>
<de.splitstudio.utils.view.Calculator xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dip"
    android:orientation="vertical" >

    <!-- Calculator -->

    <TableLayout
        android:id="@+id/calculator_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:stretchColumns="*"
        tools:ignore="HardcodedText" >

        <TableRow
            android:layout_width="fill_parent"
            android:gravity="top" >

            <EditText
                android:id="@+id/calculator_amount"
                style="@style/CalculatorButton"
                android:layout_span="3"
                android:editable="false"
                android:lines="1"
                tools:ignore="Deprecated" />

            <Button
                android:id="@+id/button_del"
                style="@style/CalculatorButton"
                android:drawableRight="@android:drawable/ic_input_delete" />
        </TableRow>

        <TableRow android:layout_width="fill_parent" >

            <Button
                android:id="@+id/button_1"
                style="@style/CalculatorButton"
                android:text="1" />

            <Button
                android:id="@+id/button_2"
                style="@style/CalculatorButton"
                android:text="2" />

            <Button
                android:id="@+id/button_3"
                style="@style/CalculatorButton"
                android:text="3" />

            <Button
                android:id="@+id/button_minus"
                style="@style/CalculatorButton"
                android:text="-" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_4"
                style="@style/CalculatorButton"
                android:text="4" />

            <Button
                android:id="@+id/button_5"
                style="@style/CalculatorButton"
                android:text="5" />

            <Button
                android:id="@+id/button_6"
                style="@style/CalculatorButton"
                android:text="6" />

            <Button
                android:id="@+id/button_0"
                style="@style/CalculatorButton"
                android:text="0" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_7"
                style="@style/CalculatorButton"
                android:text="7" />

            <Button
                android:id="@+id/button_8"
                style="@style/CalculatorButton"
                android:text="8" />

            <Button
                android:id="@+id/button_9"
                style="@style/CalculatorButton"
                android:text="9" />

            <Button
                android:id="@+id/button_seperator"
                style="@style/CalculatorButton" />
        </TableRow>
    </TableLayout>

</de.splitstudio.utils.view.Calculator>